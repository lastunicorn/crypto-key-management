<UserControl
    x:Class="DustInTheWind.CryptoKeyManagement.Wpf.Presentation.SigningPage.SigningPage"
 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:signingPanel="clr-namespace:DustInTheWind.CryptoKeyManagement.Wpf.Presentation.SigningPanel"
    xmlns:keysSelector="clr-namespace:DustInTheWind.CryptoKeyManagement.Wpf.Presentation.KeysSelector"
    xmlns:keyInfo="clr-namespace:DustInTheWind.CryptoKeyManagement.Wpf.Presentation.KeyInfo"
    
    mc:Ignorable="d"
    d:DesignHeight="450"
    d:DesignWidth="800">

    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300" MinWidth="200" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" MinWidth="400" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Left Panel - Keys Section -->
        <keysSelector:KeysSelectorControl
            Grid.Column="0"
            Grid.Row="0"
            DataContext="{Binding KeysSelectorViewModel}" />

        <!-- GridSplitter (Vertical) -->
        <GridSplitter
            Grid.Column="1"
            Grid.Row="0"
            Width="5"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            ShowsPreview="True"
            Margin="10 0" />

        <!-- Right Panel Container -->
        <Grid Grid.Column="2" Grid.Row="0">

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- Top Right Panel - Key Information Section -->
            <keyInfo:KeyInfoControl
                Grid.Row="0"
                DataContext="{Binding KeyInfoViewModel}" />

            <!-- Bottom Right Panel - Message and Signature Section -->
            <signingPanel:SigningPanelControl
                Grid.Row="1"
                Margin="0 10 0 0"
                DataContext="{Binding SigningPanelViewModel}" />
        </Grid>

    </Grid>
</UserControl>