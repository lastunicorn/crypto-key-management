<UserControl
    x:Class="DustInTheWind.CryptoKeyManagement.Wpf.Presentation.SigningPanel.SigningPanelControl"
    
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:controls="clr-namespace:DustInTheWind.CryptoKeyManagement.Wpf.Presentation.Controls"
    
    mc:Ignorable="d"
    d:DesignHeight="450"
    d:DesignWidth="800">

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Message Input Section -->
        <TextBlock
            Grid.Row="0"
            Text="Message to Sign"
            FontSize="16"
            FontWeight="Bold"
            Margin="0 5 0 5"/>

        <Grid Grid.Row="1">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBox
                Grid.Column="0"
                Name="MessageTextBox"
                Text="{Binding Message, UpdateSourceTrigger=PropertyChanged}"
                TextWrapping="Wrap"
                AcceptsReturn="True"
                VerticalScrollBarVisibility="Auto"
                HorizontalScrollBarVisibility="Auto"
                VerticalAlignment="Stretch"/>

            <Button
                Grid.Column="1"
                Name="SignMessageButton"
                Margin="10 0 0 0"
                MinHeight="30"
                VerticalAlignment="Top"
                Command="{Binding SignMessageCommand}"
                CommandParameter="{Binding Message}"
                Padding="10 5">

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Image
                        Source="{StaticResource SignMessageIcon}"
                        Width="16"
                        Height="16"
                        Margin="0 0 8 0"/>
                    
                    <TextBlock
                        Text="Sign Message"
                        VerticalAlignment="Center"/>
                </StackPanel>

            </Button>

        </Grid>

        <!-- Signature Output Section -->
        <TextBlock
            Grid.Row="2"
            Text="Generated Signature (Base64)"
            FontSize="16"
            FontWeight="Bold"
            Margin="0 10 0 5"/>

        <controls:EnhancedTextBox
            Grid.Row="3"
            x:Name="SignatureTextBox"
            Text="{Binding Signature, Mode=OneWay}"
            VerticalScrollBarVisibility="Auto"/>

    </Grid>

</UserControl>
    