    <Color x:Key="SurfaceColor">#FFF8F8F8</Color>
    <Color x:Key="SurfaceHoverColor">#FFE1E1E1</Color>
    <Color x:Key="SurfaceDisabledColor">#FFF0F0F0</Color>
