<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:DustInTheWind.CryptoKeyManagement.Wpf.Presentation.Controls"
    xmlns:sidebar="clr-namespace:DustInTheWind.CryptoKeyManagement.Wpf.Presentation.Sidebar">

    <!-- Light Theme Colors -->
    <Color x:Key="BackgroundColor">#FFFFFFFF</Color>
    <Color x:Key="SurfaceColor">#FFF8F8F8</Color>
    <Color x:Key="SurfaceHoverColor">#FFE1E1E1</Color>
    <Color x:Key="BorderColor">#FFCCCCCC</Color>
    <Color x:Key="TextColor">#FF000000</Color>
    <Color x:Key="TextSecondaryColor">#FF333333</Color>
    <Color x:Key="TextDisabledColor">#FF666666</Color>
    <Color x:Key="AccentColor">#FF0078D4</Color>
    <Color x:Key="AccentHoverColor">#FF106EBE</Color>
    <Color x:Key="AccentPressedColor">#FF005A9E</Color>
    <Color x:Key="IconStrokeColor">#FF666666</Color>

    <!-- Light Theme Brushes -->
    <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}"/>
    <SolidColorBrush x:Key="SurfaceBrush" Color="{StaticResource SurfaceColor}"/>
    <SolidColorBrush x:Key="SurfaceHoverBrush" Color="{StaticResource SurfaceHoverColor}"/>
    <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}"/>
    <SolidColorBrush x:Key="TextBrush" Color="{StaticResource TextColor}"/>
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource TextSecondaryColor}"/>
    <SolidColorBrush x:Key="TextDisabledBrush" Color="{StaticResource TextDisabledColor}"/>
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}"/>
    <SolidColorBrush x:Key="AccentHoverBrush" Color="{StaticResource AccentHoverColor}"/>
    <SolidColorBrush x:Key="AccentPressedBrush" Color="{StaticResource AccentPressedColor}"/>
    <SolidColorBrush x:Key="IconStrokeBrush" Color="{StaticResource IconStrokeColor}"/>

    <!-- Copy icon -->
    <DrawingImage x:Key="CopyIcon">
        <DrawingImage.Drawing>
            <DrawingGroup>

                <!-- Background document -->
                <GeometryDrawing Brush="Transparent">
                    <GeometryDrawing.Pen>
                        <Pen Brush="{StaticResource IconStrokeBrush}" Thickness="1.2"/>
                    </GeometryDrawing.Pen>
                    <GeometryDrawing.Geometry>
                        <RectangleGeometry Rect="2,2,8,10" RadiusX="0.5" RadiusY="0.5"/>
                    </GeometryDrawing.Geometry>
                </GeometryDrawing>

                <!-- Foreground document (copy) -->
                <GeometryDrawing Brush="White">
                    <GeometryDrawing.Pen>
                        <Pen Brush="{StaticResource IconStrokeBrush}" Thickness="1.2"/>
                    </GeometryDrawing.Pen>
                    <GeometryDrawing.Geometry>
                        <RectangleGeometry Rect="6,4,8,10" RadiusX="0.5" RadiusY="0.5"/>
                    </GeometryDrawing.Geometry>
                </GeometryDrawing>

            </DrawingGroup>
        </DrawingImage.Drawing>
    </DrawingImage>

    <!-- Sign message icon -->
    <DrawingImage x:Key="SignMessageIcon">
        <DrawingImage.Drawing>
            <DrawingGroup>
                <!-- Key head (circle) -->
                <GeometryDrawing Brush="Transparent">
                    <GeometryDrawing.Pen>
                        <Pen Brush="{StaticResource IconStrokeBrush}" Thickness="1.2"/>
                    </GeometryDrawing.Pen>
                    <GeometryDrawing.Geometry>
                        <EllipseGeometry Center="5,8" RadiusX="3" RadiusY="3"/>
                    </GeometryDrawing.Geometry>
                </GeometryDrawing>
                <!-- Plus sign inside head -->
                <GeometryDrawing>
                    <GeometryDrawing.Pen>
                        <Pen Brush="{StaticResource IconStrokeBrush}" Thickness="1.2"/>
                    </GeometryDrawing.Pen>
                    <GeometryDrawing.Geometry>
                        <GeometryGroup>
                            <LineGeometry StartPoint="5,7" EndPoint="5,9"/>
                            <LineGeometry StartPoint="4,8" EndPoint="6,8"/>
                        </GeometryGroup>
                    </GeometryDrawing.Geometry>
                </GeometryDrawing>
                <!-- Key shaft -->
                <GeometryDrawing Brush="Transparent">
                    <GeometryDrawing.Pen>
                        <Pen Brush="{StaticResource IconStrokeBrush}" Thickness="1.2"/>
                    </GeometryDrawing.Pen>
                    <GeometryDrawing.Geometry>
                        <RectangleGeometry Rect="8,7,5,2" RadiusX="0.5" RadiusY="0.5"/>
                    </GeometryDrawing.Geometry>
                </GeometryDrawing>
                <!-- Key tooth -->
                <GeometryDrawing Brush="Transparent">
                    <GeometryDrawing.Pen>
                        <Pen Brush="{StaticResource IconStrokeBrush}" Thickness="1.2"/>
                    </GeometryDrawing.Pen>
                    <GeometryDrawing.Geometry>
                        <RectangleGeometry Rect="13,7,1.5,2" RadiusX="0.3" RadiusY="0.3"/>
                    </GeometryDrawing.Geometry>
                </GeometryDrawing>
            </DrawingGroup>
        </DrawingImage.Drawing>
    </DrawingImage>

    <!-- Delete icon -->
    <DrawingImage x:Key="DeleteIcon">
        <DrawingImage.Drawing>
            <DrawingGroup>
                <!-- Trash can body -->
                <GeometryDrawing Brush="Transparent">
                    <GeometryDrawing.Pen>
                        <Pen Brush="{StaticResource IconStrokeBrush}" Thickness="1.2"/>
                    </GeometryDrawing.Pen>
                    <GeometryDrawing.Geometry>
                        <RectangleGeometry Rect="4,6,8,8" RadiusX="0.5" RadiusY="0.5"/>
                    </GeometryDrawing.Geometry>
                </GeometryDrawing>

                <!-- Trash can lid -->
                <GeometryDrawing>
                    <GeometryDrawing.Pen>
                        <Pen Brush="{StaticResource IconStrokeBrush}" Thickness="1.2"/>
                    </GeometryDrawing.Pen>
                    <GeometryDrawing.Geometry>
                        <LineGeometry StartPoint="3,6" EndPoint="13,6"/>
                    </GeometryDrawing.Geometry>
                </GeometryDrawing>

                <!-- Trash can handle -->
                <GeometryDrawing Brush="Transparent">
                    <GeometryDrawing.Pen>
                        <Pen Brush="{StaticResource IconStrokeBrush}" Thickness="1.2"/>
                    </GeometryDrawing.Pen>
                    <GeometryDrawing.Geometry>
                        <RectangleGeometry Rect="6,4,4,2" RadiusX="1" RadiusY="1"/>
                    </GeometryDrawing.Geometry>
                </GeometryDrawing>

                <!-- Vertical lines inside trash can -->
                <GeometryDrawing>
                    <GeometryDrawing.Pen>
                        <Pen Brush="{StaticResource IconStrokeBrush}" Thickness="1"/>
                    </GeometryDrawing.Pen>
                    <GeometryDrawing.Geometry>
                        <LineGeometry StartPoint="6,8" EndPoint="6,12"/>
                    </GeometryDrawing.Geometry>
                </GeometryDrawing>

                <GeometryDrawing>
                    <GeometryDrawing.Pen>
                        <Pen Brush="{StaticResource IconStrokeBrush}" Thickness="1"/>
                    </GeometryDrawing.Pen>
                    <GeometryDrawing.Geometry>
                        <LineGeometry StartPoint="8,8" EndPoint="8,12"/>
                    </GeometryDrawing.Geometry>
                </GeometryDrawing>

                <GeometryDrawing>
                    <GeometryDrawing.Pen>
                        <Pen Brush="{StaticResource IconStrokeBrush}" Thickness="1"/>
                    </GeometryDrawing.Pen>
                    <GeometryDrawing.Geometry>
                        <LineGeometry StartPoint="10,8" EndPoint="10,12"/>
                    </GeometryDrawing.Geometry>
                </GeometryDrawing>
            </DrawingGroup>
        </DrawingImage.Drawing>
    </DrawingImage>

    <!-- Create key icon -->
    <DrawingImage x:Key="CreateKeyIcon">
        <DrawingImage.Drawing>
            <DrawingGroup>
                <!-- Outer rounded square -->
                <GeometryDrawing Brush="Transparent">
                    <GeometryDrawing.Pen>
                        <Pen Brush="{StaticResource IconStrokeBrush}" Thickness="1.2"/>
                    </GeometryDrawing.Pen>
                    <GeometryDrawing.Geometry>
                        <RectangleGeometry Rect="2,2,12,12" RadiusX="2" RadiusY="2"/>
                    </GeometryDrawing.Geometry>
                </GeometryDrawing>
                <!-- Plus sign -->
                <GeometryDrawing>
                    <GeometryDrawing.Pen>
                        <Pen Brush="{StaticResource IconStrokeBrush}" Thickness="1.2" StartLineCap="Square" EndLineCap="Square"/>
                    </GeometryDrawing.Pen>
                    <GeometryDrawing.Geometry>
                        <GeometryGroup>
                            <LineGeometry StartPoint="8,5" EndPoint="8,11"/>
                            <LineGeometry StartPoint="5,8" EndPoint="11,8"/>
                        </GeometryGroup>
                    </GeometryDrawing.Geometry>
                </GeometryDrawing>
            </DrawingGroup>
        </DrawingImage.Drawing>
    </DrawingImage>

    <!-- Refresh icon -->
    <DrawingImage x:Key="RefreshIcon">
        <DrawingImage.Drawing>
            <DrawingGroup>
                <GeometryDrawing Brush="Transparent">
                    <GeometryDrawing.Pen>
                        <Pen Brush="{StaticResource IconStrokeBrush}" Thickness="1.2" StartLineCap="Round" EndLineCap="Round" LineJoin="Round"/>
                    </GeometryDrawing.Pen>
                    <GeometryDrawing.Geometry>
                        <GeometryGroup>
                            <!-- Upper arc -->
                            <PathGeometry>
                                <PathFigure StartPoint="5,5" IsClosed="False">
                                    <ArcSegment Point="13,9" Size="6,6" IsLargeArc="False" SweepDirection="Clockwise"/>
                                </PathFigure>
                            </PathGeometry>
                            <!-- Right arrow head -->
                            <LineGeometry StartPoint="13,9" EndPoint="11.5,7.5"/>
                            <LineGeometry StartPoint="13,9" EndPoint="11.5,10.5"/>
                            <!-- Lower arc -->
                            <PathGeometry>
                                <PathFigure StartPoint="11,13" IsClosed="False">
                                    <ArcSegment Point="3,9" Size="6,6" IsLargeArc="False" SweepDirection="Clockwise"/>
                                </PathFigure>
                            </PathGeometry>
                            <!-- Left arrow head -->
                            <LineGeometry StartPoint="3,9" EndPoint="4.5,7.5"/>
                            <LineGeometry StartPoint="3,9" EndPoint="4.5,10.5"/>
                        </GeometryGroup>
                    </GeometryDrawing.Geometry>
                </GeometryDrawing>
            </DrawingGroup>
        </DrawingImage.Drawing>
    </DrawingImage>

    <!-- Window Style -->
    <Style TargetType="Window">
        <Setter Property="Background" Value="{StaticResource BackgroundBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
    </Style>

    <!-- UserControl Style -->
    <Style TargetType="UserControl">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
    </Style>

    <!-- TextBlock Style -->
    <Style TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
    </Style>

    <!-- Style for read-only TextBox controls with lighter gray background -->
    <Style TargetType="TextBox">
        <Setter Property="Background" Value="{StaticResource SurfaceBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="4"/>
        <Setter Property="CaretBrush" Value="{StaticResource TextBrush}"/>
        <Setter Property="SelectionBrush" Value="{StaticResource AccentBrush}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TextBox">
                    <Border
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="2"
                        SnapsToDevicePixels="True">
                    <ScrollViewer
                        x:Name="PART_ContentHost"
                        Focusable="false"
                        HorizontalScrollBarVisibility="Hidden"
                        VerticalScrollBarVisibility="Hidden"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsEnabled" Value="false">
                            <Setter Property="Foreground" Value="{StaticResource TextDisabledBrush}"/>
                        </Trigger>
                        <Trigger Property="IsMouseOver" Value="true">
                            <Setter Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
                        </Trigger>
                        <Trigger Property="IsFocused" Value="true">
                            <Setter Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsReadOnly" Value="True">
                <Setter Property="Background" Value="#E5E5E5"/>
                <Setter Property="BorderBrush" Value="#CCCCCC"/>
                <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- Button Style -->
    <Style TargetType="Button">
        <Setter Property="Background" Value="{StaticResource SurfaceBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="8,4"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="2">
                    <ContentPresenter
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Margin="{TemplateBinding Padding}"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="{StaticResource SurfaceHoverBrush}"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Background" Value="{StaticResource AccentPressedBrush}"/>
                            <Setter Property="Foreground" Value="White"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Foreground" Value="{StaticResource TextDisabledBrush}"/>
                            <Setter Property="Background" Value="#FFF0F0F0"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ListBox Style -->
    <Style TargetType="ListBox">
        <Setter Property="Background" Value="{StaticResource SurfaceBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
    </Style>

    <!-- ListBoxItem Style -->
    <Style TargetType="ListBoxItem">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{StaticResource SurfaceHoverBrush}"/>
            </Trigger>
            <Trigger Property="IsSelected" Value="True">
                <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
                <Setter Property="Foreground" Value="White"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- GridSplitter Style -->
    <Style TargetType="GridSplitter">
        <Setter Property="Background" Value="{StaticResource BorderBrush}"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- Border Style -->
    <Style TargetType="Border">
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
        <Setter Property="Background" Value="Transparent"/>
    </Style>

    <!-- ToolTip Style -->
    <Style TargetType="ToolTip">
        <Setter Property="Background" Value="{StaticResource SurfaceBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="6,4"/>
    </Style>

    <!-- Sidebar Styles -->
    <SolidColorBrush x:Key="SidebarBorderBrush" Color="{StaticResource BorderColor}"/>
    <SolidColorBrush x:Key="SidebarButtonHoverBrush" Color="{StaticResource SurfaceHoverColor}"/>
    <SolidColorBrush x:Key="SidebarButtonPressedBrush" Color="{StaticResource AccentColor}"/>

    <Style TargetType="{x:Type controls:SidebarButton}">

        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
        <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.WindowTextBrushKey}}"/>
        <Setter Property="Width" Value="40"/>
        <Setter Property="Height" Value="40"/>
        <Setter Property="FontSize" Value="18"/>

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">

                    <Border
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="2"
                        Name="Border">

                        <ContentPresenter
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Margin="{TemplateBinding Padding}"
                            TextElement.Foreground="{TemplateBinding Foreground}"/>
                    </Border>

                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Border" Property="Background" Value="{DynamicResource SidebarButtonHoverBrush}"/>
                            <Setter TargetName="Border" Property="BorderBrush" Value="{DynamicResource SidebarBorderBrush}"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="Border" Property="Background" Value="{DynamicResource SidebarButtonPressedBrush}"/>
                            <Setter Property="Foreground" Value="White"/>
                        </Trigger>
                    </ControlTemplate.Triggers>

                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="{x:Type sidebar:SideNavigator}">
        <Setter Property="Foreground" Value="{DynamicResource FontPrimaryBrush}" />
        <Setter Property="Background" Value="{DynamicResource SidebarBackgroundBrush}" />
        <Setter Property="BorderBrush" Value="{DynamicResource SidebarBorderBrush}" />
        <Setter Property="FontSize" Value="{DynamicResource DefaultFontSize}" />
        <Setter Property="TabStripPlacement" Value="Left" />
        <Setter Property="Padding" Value="5 5 5 10" />
        <Setter Property="Margin" Value="0" />

        <!--
        ================================================================================================
        Template
        ================================================================================================
        -->

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type sidebar:SideNavigator}">
                    <DockPanel>

                        <Border
                            DockPanel.Dock="Left"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            Background="{TemplateBinding Background}"
                            ClipToBounds="True"
                            BorderThickness="0 0 1 0"
                            Padding="{TemplateBinding Padding}">

                            <DockPanel>

                                <ItemsControl
                                    DockPanel.Dock="Bottom"
                                    ItemsSource="{TemplateBinding Buttons}" />

                                <TabPanel
                                    IsItemsHost="true"
                                    Background="Transparent" />

                            </DockPanel>
                        </Border>

                        <ContentPresenter ContentSource="SelectedContent" />

                    </DockPanel>
                </ControlTemplate>
            </Setter.Value>
        </Setter>

        <Setter Property="ContentTemplate">
            <Setter.Value>
                <DataTemplate>
                    <Border Padding="10">
                        <ContentPresenter Content="{Binding}"/>
                    </Border>
                </DataTemplate>
            </Setter.Value>
        </Setter>

        <!--
        ================================================================================================
        TabItem Style
        ================================================================================================
        -->

        <Setter Property="ItemContainerStyle">
            <Setter.Value>

                <Style TargetType="{x:Type TabItem}">

                    <Setter Property="HeaderTemplate">
                        <Setter.Value>
                            <DataTemplate>
                                <ContentControl
                                    Content="{TemplateBinding Content}"
                                    FontSize="{DynamicResource DefaultFontSize}"
                                    IsTabStop="False" />
                            </DataTemplate>
                        </Setter.Value>
                    </Setter>

                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type TabItem}">

                                <Border
                                    Name="PART_Panel"
                                    Margin="5"
                                    CornerRadius="2"
                                    Width="40"
                                    Height="40">

                                    <ContentPresenter
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Center"
                                        ContentSource="Header" />

                                </Border>

                                <ControlTemplate.Triggers>

                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter TargetName="PART_Panel" Property="Background" Value="{DynamicResource SurfaceHoverBrush}" />
                                        <Setter TargetName="PART_Panel" Property="BorderBrush" Value="{DynamicResource BorderBrush}" />
                                        <Setter TargetName="PART_Panel" Property="BorderThickness" Value="1" />
                                    </Trigger>

                                    <Trigger Property="IsSelected" Value="False">
                                        <Setter TargetName="PART_Panel" Property="Background" Value="Transparent" />
                                    </Trigger>

                                    <MultiTrigger>

                                        <MultiTrigger.Conditions>
                                            <Condition Property="IsSelected" Value="False" />
                                            <Condition Property="IsMouseOver" Value="True" />
                                        </MultiTrigger.Conditions>

                                        <MultiTrigger.Setters>
                                            <Setter TargetName="PART_Panel" Property="Background" Value="{DynamicResource SurfaceHoverBrush}" />
                                        </MultiTrigger.Setters>

                                    </MultiTrigger>

                                </ControlTemplate.Triggers>

                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>

                </Style>

            </Setter.Value>
        </Setter>

    </Style>

</ResourceDictionary>