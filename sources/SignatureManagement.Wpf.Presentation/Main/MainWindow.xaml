<Window
    x:Class="DustInTheWind.SignatureManagement.Wpf.Main.MainWindow"
 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
   
    mc:Ignorable="d"
    Title="Signature Management - Keys"
    Height="600"
    Width="1000">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock
            Grid.Row="0"
            Text="Signature Keys"
            FontSize="16"
            FontWeight="Bold"
            Margin="10"
            HorizontalAlignment="Center"/>

        <Button Grid.Row="1"
            Name="CreateSampleKeyButton"
            Content="Create Sample Key"
            Margin="10,5"
            HorizontalAlignment="Center"
            Width="150"/>

        <ListBox Grid.Row="2"
            Name="SignatureKeysListBox"
            Margin="10"
            ItemsSource="{Binding SignatureKeys}"
            SelectedItem="{Binding SelectedSignatureKey}">

            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Vertical" Margin="5">
                        <TextBlock Text="{Binding Id}" FontWeight="Bold" FontSize="12"/>
                        <TextBlock Text="{Binding CreatedDateText}" FontSize="10" Foreground="Gray"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>

        </ListBox>

        <!-- Message Input Section -->
        <TextBlock
            Grid.Row="3"
            Text="Message to Sign"
            FontSize="14"
            FontWeight="Bold"
            Margin="10,10,10,5"/>

        <Grid
            Grid.Row="4"
            Margin="10,0,10,10">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBox
                Grid.Column="0"
                Name="MessageTextBox"
                Text="{Binding Message, UpdateSourceTrigger=PropertyChanged}"
                TextWrapping="Wrap"
                AcceptsReturn="True"
                VerticalScrollBarVisibility="Auto"
                HorizontalScrollBarVisibility="Auto"
                VerticalAlignment="Stretch"/>

            <Button
                Grid.Column="1"
                Name="SignMessageButton"
                Content="Sign Message"
                Margin="10,0,0,0"
                Width="100"
                Height="30"
                VerticalAlignment="Top"
                Command="{Binding SignMessageCommand}"
                CommandParameter="{Binding Message}"/>

        </Grid>

        <!-- Signature Output Section -->
        <TextBlock
            Grid.Row="5"
            Text="Generated Signature (Base64)"
            FontSize="14"
            FontWeight="Bold"
            Margin="10,10,10,5"/>

        <TextBox
            Grid.Row="6"
            Name="SignatureTextBox"
            Text="{Binding Signature, Mode=OneWay}"
            Margin="10,0,10,10"
            TextWrapping="Wrap"
            IsReadOnly="True"
            VerticalScrollBarVisibility="Auto"
            HorizontalScrollBarVisibility="Auto"
            Background="LightGray"/>

    </Grid>

</Window>
