<Window
    x:Class="DustInTheWind.SignatureManagement.Wpf.Main.MainWindow"
    
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:signingPanel="clr-namespace:DustInTheWind.SignatureManagement.Wpf.Presentation.SigningPanel"
    xmlns:keysSelector="clr-namespace:DustInTheWind.SignatureManagement.Wpf.Presentation.KeysSelector"
    xmlns:keyInfo="clr-namespace:DustInTheWind.SignatureManagement.Wpf.Presentation.KeyInfo"
    
    mc:Ignorable="d"
    Title="Signature Management - Keys"
    Height="600"
    Width="1000">

    <Border Margin="10">

        <Grid>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300" MinWidth="200" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" MinWidth="400" />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- Left Panel - Keys Section -->
            <keysSelector:KeysSelectorControl
                Grid.Column="0"
                Grid.Row="0"
                Grid.RowSpan="3"
                DataContext="{Binding KeysSelectorViewModel}" />

            <!-- GridSplitter (Vertical) -->
            <GridSplitter
                Grid.Column="1"
                Grid.Row="0"
                Grid.RowSpan="3"
                Width="5"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                Background="LightGray"
                ShowsPreview="True"
                Margin="10 0" />

            <!-- Top Right Panel - Key Information Section -->
            <keyInfo:KeyInfoControl
                Grid.Column="2"
                Grid.Row="0"
                DataContext="{Binding KeyInfoViewModel}" />

            <!-- Bottom Right Panel - Message and Signature Section -->
            <signingPanel:SigningPanelControl
                Grid.Column="2"
                Grid.Row="1"
                Margin="0 10 0 0"
                DataContext="{Binding SigningPanelViewModel}" />

        </Grid>
    </Border>

</Window>