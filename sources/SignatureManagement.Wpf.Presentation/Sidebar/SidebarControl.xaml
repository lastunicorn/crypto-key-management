<UserControl
    x:Class="DustInTheWind.SignatureManagement.Wpf.Presentation.Sidebar.SidebarControl"
   
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    
    mc:Ignorable="d"
    d:DesignHeight="450"
    d:DesignWidth="60">

    <!-- Sidebar Background -->
    <Border 
        Background="{DynamicResource SidebarBackgroundBrush}"
        BorderBrush="{DynamicResource SidebarBorderBrush}"
        BorderThickness="0 0 1 0"
        Padding="5">

        <StackPanel
            Orientation="Vertical"
            HorizontalAlignment="Center">

            <!-- Theme Toggle Button -->
            <Button 
                Content="{Binding ThemeToggleText}"
                Command="{Binding ToggleThemeCommand}"
                Style="{StaticResource SidebarButtonStyle}"
                ToolTip="Toggle between light and dark theme" />

            <!-- Future sidebar items can be added here -->

        </StackPanel>
    </Border>

</UserControl>