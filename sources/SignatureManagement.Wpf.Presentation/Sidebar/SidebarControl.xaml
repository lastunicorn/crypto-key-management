<UserControl
    x:Class="DustInTheWind.SignatureManagement.Wpf.Presentation.Sidebar.SidebarControl"
   
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:controls="clr-namespace:DustInTheWind.SignatureManagement.Wpf.Presentation.Controls"
  
    mc:Ignorable="d"
    d:DesignHeight="450"
    d:DesignWidth="60">

    <!-- Sidebar Background -->
    <Border 
        Background="{DynamicResource SidebarBackgroundBrush}"
        BorderBrush="{DynamicResource SidebarBorderBrush}"
        BorderThickness="0 0 1 0"
        Padding="5 5 5 10">

        <DockPanel
            HorizontalAlignment="Center">

            <!-- Theme Toggle Button docked to bottom -->
            <controls:SidebarButton 
                DockPanel.Dock="Bottom"
                Content="{Binding ThemeToggleText}"
                Command="{Binding ToggleThemeCommand}"
                ToolTip="Toggle between light and dark theme" />

            <!-- Future sidebar items can be added here at the top -->
            <StackPanel
                Orientation="Vertical"
                HorizontalAlignment="Center">
                <!-- Additional buttons or controls can be added here -->
            </StackPanel>

        </DockPanel>
    </Border>

</UserControl>