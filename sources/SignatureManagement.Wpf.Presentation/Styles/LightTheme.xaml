<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Light Theme Colors -->
    <Color x:Key="LightBackground">#FFFFFFFF</Color>
    <Color x:Key="LightSurface">#FFF8F8F8</Color>
    <Color x:Key="LightSurfaceHover">#FFE1E1E1</Color>
    <Color x:Key="LightBorder">#FFCCCCCC</Color>
    <Color x:Key="LightText">#FF000000</Color>
    <Color x:Key="LightTextSecondary">#FF333333</Color>
    <Color x:Key="LightTextDisabled">#FF666666</Color>
    <Color x:Key="LightAccent">#FF0078D4</Color>
    <Color x:Key="LightAccentHover">#FF106EBE</Color>
    <Color x:Key="LightAccentPressed">#FF005A9E</Color>

    <!-- Light Theme Brushes -->
    <SolidColorBrush x:Key="LightBackgroundBrush" Color="{StaticResource LightBackground}"/>
    <SolidColorBrush x:Key="LightSurfaceBrush" Color="{StaticResource LightSurface}"/>
    <SolidColorBrush x:Key="LightSurfaceHoverBrush" Color="{StaticResource LightSurfaceHover}"/>
    <SolidColorBrush x:Key="LightBorderBrush" Color="{StaticResource LightBorder}"/>
    <SolidColorBrush x:Key="LightTextBrush" Color="{StaticResource LightText}"/>
    <SolidColorBrush x:Key="LightTextSecondaryBrush" Color="{StaticResource LightTextSecondary}"/>
    <SolidColorBrush x:Key="LightTextDisabledBrush" Color="{StaticResource LightTextDisabled}"/>
    <SolidColorBrush x:Key="LightAccentBrush" Color="{StaticResource LightAccent}"/>
    <SolidColorBrush x:Key="LightAccentHoverBrush" Color="{StaticResource LightAccentHover}"/>
    <SolidColorBrush x:Key="LightAccentPressedBrush" Color="{StaticResource LightAccentPressed}"/>

    <!-- Copy icon -->
    <DrawingImage x:Key="CopyIcon">
        <DrawingImage.Drawing>
            <DrawingGroup>

                <!-- Background document -->
                <GeometryDrawing Brush="Transparent">
                    <GeometryDrawing.Pen>
                        <Pen Brush="#666666" Thickness="1.2"/>
                    </GeometryDrawing.Pen>
                    <GeometryDrawing.Geometry>
                        <RectangleGeometry Rect="2,2,8,10" RadiusX="0.5" RadiusY="0.5"/>
                    </GeometryDrawing.Geometry>
                </GeometryDrawing>

                <!-- Foreground document (copy) -->
                <GeometryDrawing Brush="White">
                    <GeometryDrawing.Pen>
                        <Pen Brush="#666666" Thickness="1.2"/>
                    </GeometryDrawing.Pen>
                    <GeometryDrawing.Geometry>
                        <RectangleGeometry Rect="6,4,8,10" RadiusX="0.5" RadiusY="0.5"/>
                    </GeometryDrawing.Geometry>
                </GeometryDrawing>

            </DrawingGroup>
        </DrawingImage.Drawing>
    </DrawingImage>

    <!-- Style for read-only TextBox controls with lighter gray background -->
    <Style TargetType="TextBox">
        <Style.Triggers>
            <Trigger Property="IsReadOnly" Value="True">
                <Setter Property="Background" Value="#F5F5F5"/>
                <Setter Property="BorderBrush" Value="#CCCCCC"/>
            </Trigger>
        </Style.Triggers>
    </Style>

</ResourceDictionary>