<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Copy icon as vector graphics -->
    <Canvas
        x:Key="CopyIcon"
        Width="16"
        Height="16" Clip="F1 M 0,0L 16,0L 16,16L 0,16L 0,0">

        <!-- Clipboard background -->
        <Rectangle
            Width="10"
            Height="12"
            Canvas.Left="3"
            Canvas.Top="2" 
            Fill="#333333"
            Stroke="#555555"
            StrokeThickness="0.5"
            RadiusX="0.5"
            RadiusY="0.5"/>

        <!-- Clipboard front -->
        <Rectangle 
            Width="8" 
            Height="10" 
            Canvas.Left="5" 
            Canvas.Top="4" 
            Fill="White" 
            Stroke="#333333" 
            StrokeThickness="0.5" 
            RadiusX="0.5" 
            RadiusY="0.5"/>

        <!-- Lines representing text -->
        <Rectangle Width="5" Height="0.8" Canvas.Left="6" Canvas.Top="6" Fill="#666666"/>
        <Rectangle Width="4" Height="0.8" Canvas.Left="6" Canvas.Top="7.5" Fill="#666666"/>
        <Rectangle Width="5" Height="0.8" Canvas.Left="6" Canvas.Top="9" Fill="#666666"/>
        <Rectangle Width="3" Height="0.8" Canvas.Left="6" Canvas.Top="10.5" Fill="#666666"/>
    </Canvas>

    <!-- Style for read-only TextBox controls with lighter gray background -->
    <Style x:Key="ReadOnlyTextBoxStyle" TargetType="TextBox">
        <Style.Triggers>
            <Trigger Property="IsReadOnly" Value="True">
                <Setter Property="Background" Value="#F5F5F5"/>
                <Setter Property="BorderBrush" Value="#CCCCCC"/>
            </Trigger>
        </Style.Triggers>
    </Style>

</ResourceDictionary>